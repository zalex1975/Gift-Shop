        <link rel="stylesheet" href="~/Style/css/StyleSheet.css">

        <title>Gift Shop</title>
        
        <style>
            body{
                background-image: url('Image/Fon/fon7.webp');
                background-size: cover;
                background-position: center;
                }
        </style>
   
    </head>

<body>
    @* <nav class="navbar" style="background-color: #b9c5ce;"> *@
    <nav class="navbar bg-dark  border-bottom border-body" data-bs-theme="dark">
        @* <div class="row align-items-end> *@
        <div class="align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <a class="col navbar-brand" href="#">
                <img src="/Image/Fon/surgut3.png"> МИР СУВЕНИРОВ - СУРГУТ
                               @* <img src="/Image/Fon/surgut.png">  *@
            </a>
